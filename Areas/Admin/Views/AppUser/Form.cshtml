@model AppUserViewModel

@{ 
    List<AppRoleViewModel> roles = ViewBag.Role as List<AppRoleViewModel>;
}

@{
    ViewData["Title"] = "Form";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h2>Admin <small>Role</small></h2>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h3>Create</h3>
                        <ul class="nav navbar-right panel_toolbox">
                            <a href="@RouteConstant.UserIndex" class="btn btn-default">Back</a>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br>
                        <form id="frmCreate" method="post" action="@RouteConstant.UserCreate" class="form-horizontal form-label-left">

                            <div class="form-group">
                                <div class="col-md-9 col-sm-9 col-xs-12 pull-right">
                                    <div asp-validation-summary="@ValidationSummary.All"></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="@Model.FullName">
                                    FullName <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="@Model.FullName" class="form-control col-md-7 col-xs-12">
                                    @*<span asp-validation-for="@Model.FullName"></span>*@
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="@Model.UserName">
                                    UserName <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="@Model.UserName" class="form-control col-md-7 col-xs-12">
                                    @*<span asp-validation-for="@Model.UserName"></span>*@
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="@Model.Password">
                                    Password <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="password" asp-for="@Model.Password" class="form-control col-md-7 col-xs-12">
                                    @*<span asp-validation-for="@Model.Password"></span>*@
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="@Model.ConfirmPassword">
                                    Confirm Password <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="password" asp-for="@Model.ConfirmPassword" class="form-control col-md-7 col-xs-12">
                                    @*<span asp-validation-for="@Model.ConfirmPassword"></span>*@
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="@Model.Email">
                                    Email <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="@Model.Email" class="form-control col-md-7 col-xs-12">
                                    @*<span asp-validation-for="@Model.Email"></span>*@
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="@Model.PhoneNumber">
                                    Phone number
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input asp-for="@Model.PhoneNumber" class="form-control col-md-7 col-xs-12">
                                    @*<span asp-validation-for="@Model.PhoneNumber"></span>*@
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="@Model.RoleId">
                                    Role
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select asp-for="@Model.RoleId" asp-items="@ViewBag.Roles" class="form-control">
                                        <option>--- Choose ---</option>  
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="@Model.Status">
                                    Status
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select asp-for="@Model.Status" asp-items="@ViewBag.StatusList" class="form-control">
                                    </select>
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-9 col-sm-9 col-xs-12 pull-right">
                                    <button type="submit" id="btnSubmit" class="btn btn-success">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

